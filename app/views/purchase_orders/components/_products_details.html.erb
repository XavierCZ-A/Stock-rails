<div class="rounded-lg border border-gray-200 overflow-hidden">
  <div class="p-4">
    <h2 class="text-xl font-semibold">Productos</h2>
  </div>
  <div class="overflow-x-auto">
    <table class="w-full text-sm">
      <thead class="bg-gray-50">
      <tr>
        <th class="px-4 py-3 text-left font-medium text-gray-500 w-[100px]">SKU</th>
        <th class="px-4 py-3 text-left font-medium text-gray-500">Producto</th>
        <th class="hidden md:table-cell px-4 py-3 text-left font-medium text-gray-500">Descripci√≥n</th>
        <th class="px-4 py-3 text-right font-medium text-gray-500">Cantidad</th>
        <th class="px-4 py-3 text-right font-medium text-gray-500">Precio</th>
        <th class="px-4 py-3 text-right font-medium text-gray-500">Total</th>
      </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 bg-white">
      <% @purchase_order.order_items.each do |order_item| %>
        <tr>
          <td class="px-4 py-3 font-medium">PRO-BR-02155</td>
          <td class="px-4 py-3"><%= order_item.product.name %></td>
          <td class="hidden md:table-cell px-4 py-3"><%= order_item.product.description %></td>
          <td class="px-4 py-3 text-right">
            <%= order_item.quantity %> unidades
          </td>
          <td class="px-4 py-3 text-right"><%= number_to_currency(order_item.price) %></td>
          <td class="px-4 py-3 text-right"><%= number_to_currency(order_item.total_amount) %></td>
        </tr>
      <% end %>
      </tbody>
      <tfoot class="bg-gray-50">
      <tr>
        <td colSpan="5" class="px-4 py-3"></td>
        <td class="px-4 py-3 text-right font-medium">Subtotal</td>
        <td class="px-4 py-3 text-right"><%= number_to_currency(@purchase_order.subtotal) %></td>
      </tr>
      <tr>
        <td colSpan="5" class="px-4 py-3"></td>
        <td class="px-4 py-3 text-right font-medium">IVA</td>
        <td class="px-4 py-3 text-right"><%= number_to_currency(@purchase_order.tax_amount) %></td>
      </tr>
      <tr class="bg-gray-100">
        <td colSpan="5" class="px-4 py-3"></td>
        <td class="px-4 py-3 text-right font-medium">Total</td>
        <td class="px-4 py-3 text-right font-bold"><%= number_to_currency(@purchase_order.total) %></td>
      </tr>
      </tfoot>
    </table>
  </div>
</div>