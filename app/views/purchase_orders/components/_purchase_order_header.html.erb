<div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
  <div class="flex items-center gap-2">
    <%= link_to purchase_orders_path, class: 'p-2 rounded-md border border-gray-300 hover:bg-gray-100 transition-colors' do %>
      <%= tabler_icon('arrow-narrow-left', size: '20') %>
    <% end %>
    <div>
      <h1 class="text-2xl font-bold tracking-tight">Orden de Compra: <%= @purchase_order.order_number %></h1>
      <p class="text-gray-500">Creada el <%= @purchase_order.created_at %></p>
    </div>
  </div>
  <div class="flex flex-wrap gap-2 w-full md:w-auto">
    <%= link_to new_product_stock_path, class: 'flex items-center text-white w-full md:w-auto px-4 py-2 bg-[#7C5BF3] hover:bg-[#9576F5] rounded-md flex items-center justify-center transition-colors' do %>
      <%= tabler_icon('edit', size: '20', class: "mr-2") %>
      Edit
    <% end %>
    <%= link_to new_product_stock_path, class: 'flex items-center text-white w-full md:w-auto px-4 py-2 bg-[#7C5BF3] hover:bg-[#9576F5] rounded-md flex items-center justify-center transition-colors' do %>
      <%= tabler_icon('download', size: '20', class: "mr-2") %>
      Download
    <% end %>
    <%= link_to new_product_stock_path, class: 'flex items-center text-white w-full md:w-auto px-4 py-2 bg-[#7C5BF3] hover:bg-[#9576F5] rounded-md flex items-center justify-center transition-colors' do %>
      <%= tabler_icon('send', size: '20', class: "mr-2") %>
      Send
    <% end %>
  </div>
</div>