<% content_for :title, "Showing supplier" %>
<div class="container mx-auto px-4 py-8">
  <%= link_to suppliers_path, class: "inline-flex items-center text-[#7C5BF3] hover:text-[#9576F5] mb-6" do %>
    <%= tabler_icon('arrow-left', size: '20', class: "mr-2") %>
    Return to list of suppliers
  <% end %>
  <div class="w-full bg-white shadow-md rounded-lg p-6 mb-8">
    <h1 class="text-3xl font-bold mb-4 text-gray-800"><%= @supplier.company_name %></h1>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-gray-600">
      <div class="flex items-center space-x-2">
        <%= tabler_icon('phone', size: '20') %>
        <span>3315129273</span>
      </div>
      <div class="flex items-center space-x-2">
        <%= tabler_icon('mail', size: '20') %>
        <span>example@gmail.com</span>
      </div>
      <div class="flex items-center space-x-2">
        <%= tabler_icon('map-pin', size: '20') %>
        <span>torre motormexa periferico</span>
      </div>
    </div>
  </div>

  <div class="flex justify-between items-center border">
    <h2 class="text-2xl font-bold mb-4 text-gray-800">Contactos</h2>
    <%= link_to "New contact", new_supplier_supplier_contact_path(supplier_id: @supplier.id), class: "text-white bg-[#7C5BF3] hover:bg-[#9576F5] rounded-lg p-2" %>
  </div>


  <% if @supplier.supplier_contacts.empty? %>
    <div class="bg-white shadow-md rounded-lg p-8 text-center">
      <div class="mb-6">
        <%= tabler_icon('user-plus', size: '100', class: "mx-auto text-gray-300") %>
      </div>
      <h3 class="text-xl font-semibold text-gray-800 mb-2">No hay contactos</h3>
      <p class="text-gray-600 mb-6">Este proveedor no tiene contactos agregados. ¿Quieres agregar uno ahora?</p>
      <%= link_to new_supplier_supplier_contact_path(supplier_id: @supplier.id), class: "inline-flex items-center justify-center gap-2 px-4 py-2 rounded-lg bg-[#7C5BF3] hover:bg-[#9576F5] text-white transition-colors" do %>
        <%= tabler_icon('user-plus', size: '15') %>
        Add contact
      <% end %>
    </div>
  <% else %>
    <div class="overflow-x-auto bg-white shadow-md rounded-lg">
      <table class="min-w-full table-auto">
        <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cargo</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Teléfono
          </th>
        </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
        <% @supplier.supplier_contacts.each do |supplier_contact| %>
          <tr key={contact.id}>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <div class="ml-4">
                  <p class="text-sm font-medium text-gray-900"><%= "#{supplier_contact.name} #{supplier_contact.last_name}" %></p>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <p class="text-sm text-gray-900">CEO</p>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <p class="text-sm text-gray-900"><%= supplier_contact.email %></p>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <p class="text-sm text-gray-900"><%= supplier_contact.phone %></p>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= link_to edit_supplier_supplier_contact_path(@supplier, supplier_contact), class: "hover:text-gray-500" do %>
                <%= tabler_icon('edit', size: '20') %>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
