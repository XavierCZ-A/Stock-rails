<% content_for :title, "Products" %>
<main class="container mx-auto p-4">
  <header>
    <h1 class="text-3xl font-bold mb-6">Inventario de Productos</h1>
  </header>
  <%= render 'products/navigation' %>
  <%= render 'products/summary' %>

  <section class="mt-3 relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
      <thead class="text-xs text-gray-700 uppercase dark:text-gray-400 border">
      <tr>
        <th scope="col" class="px-6 py-3">
          Nombre
        </th>
        <th scope="col" class="px-6 py-3">
          Precio
        </th>
      </tr>
      </thead>
      <tbody>
      <% @products.each do |product| %>
        <%= render partial: 'product', locals: { product: product } %>
      <% end %>
      </tbody>
    </table>
  </section>
</main>
