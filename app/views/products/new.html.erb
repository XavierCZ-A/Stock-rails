<% content_for :title, "New products" %>

<%= turbo_frame_tag "modal" do %>
  <div data-controller="modal">
    <div data-action="click->modal#close" class="fixed z-10 w-full h-full top-0 left-0 bg-black opacity-40"></div>
    <div data-modal-target="sidebar" class="fixed top-0 right-0 z-20 w-1/2 sm:w-3/6 lg:w-2/6 h-full bg-white shadow rounded-sm flex flex-col ease-in-out duration-300 translate-x-full">
      <div class="flex items-center justify-between p-4 border-b border-gray-200 text-black">
        <h1 class="font-bold text-lg">New product</h1>
        <button type="button" data-action="click->modal#close"
                class="p-2 rounded-full bg-gray-200 hover:bg-gray-300 transition duration-200">
          <%= tabler_icon "x", size: 15, class: "text-gray-600 hover:text-gray-800" %>
        </button>
      </div>
      <div class="flex-1 overflow-y-auto p-5 bg-white scrollbar-hide">
        <%= render "form", product: @product %>
      </div>

    </div>
  </div>

<% end %>

