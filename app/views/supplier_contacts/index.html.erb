<% content_for :title, "Supplier contacts" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Supplier contacts</h1>
    <%= link_to "New supplier contact", new_supplier_supplier_contact_path(supplier_id: @supplier.id), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="supplier_contacts" class="min-w-full">
    <% if @supplier_contacts.any? %>
      <% @supplier_contacts.each do |supplier_contact| %>
        <%= render supplier_contact %>
      <% end %>
    <% else %>
      <p class="text-center my-10">No supplier contacts found.</p>
    <% end %>
  </div>
</div>
